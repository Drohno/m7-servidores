<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>core</servlet-name>
        <servlet-class>david.roldan.nocelo.mensajeria.core</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dalek</servlet-name>
        <servlet-class>david.roldan.nocelo.mensajeria.dalek</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sender</servlet-name>
        <servlet-class>david.roldan.nocelo.mensajeria.sender</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shower</servlet-name>
        <servlet-class>david.roldan.nocelo.mensajeria.shower</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>closeSession</servlet-name>
        <servlet-class>david.roldan.nocelo.mensajeria.closeSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>core</servlet-name>
        <url-pattern>/core</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dalek</servlet-name>
        <url-pattern>/dalek</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sender</servlet-name>
        <url-pattern>/sender</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shower</servlet-name>
        <url-pattern>/shower</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>closeSession</servlet-name>
        <url-pattern>/closeSession</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>Constraint1</display-name>
        <web-resource-collection>
            <web-resource-name>core</web-resource-name>
            <description/>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>doves</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/badLogin.html</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>doves</role-name>
    </security-role>
</web-app>
